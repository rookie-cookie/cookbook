<% include ./partials/header %>
	
<div class="ui main text container">
	<div class="ui huge header" style="text-align:center"><%=recipes.name%></div>	
	<div class="ui top attached">
		<div class="item">
			<img src="<%=recipes.image%>" class="ui centered rounded image">
		</div>
		<br>
		<div class="description">
			<p><%- recipes.description%></p>
		</div>
		<h3> What you will need: </h3>
		<div class="description">
			<p><%- recipes.ingredients%></p>
		</div>
		<h3>Procedure: </h3>
		<div class="description">
			<p><%- recipes.procedure%></p>
		</div><br>
		
		<a href="/recipes" class="ui mini basic button orange">Back</a>
		
		<a href="/recipes/<%=recipes._id%>/edit" class="ui mini basic button green">Edit</a>
		
		<form action="/recipes/<%=recipes._id%>?_method=DELETE" method="POST" id="delete">
			<button class="ui mini basic button red">Delete</button>
		</form>
			
	</div>
</div>	

<% include ./partials/footer %>
