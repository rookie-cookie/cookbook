<% include ./partials/header %>

<div class="ui main text container">
	<div class="ui huge header">Create Recipe</div>
	
	<form action="/recipes/<%=recipes._id%>?_method=PUT" method="POST" class="ui form">
		<div class="field">
			<label>Name</label>
			<input type="text" name="recipe[name]" value="<%=recipes.name%>">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="recipe[image]" value="<%=recipes.image%>">
		</div>
		<div class="field">
			<label>Description</label>
			<textarea name="recipe[description]"><%=recipes.description%></textarea>
		</div>
		<div class="field">
			<label>Ingredients</label>
			<textarea name="recipe[ingredients]"><%=recipes.ingredients%></textarea>
		</div>
		<div class="field">
			<label>Procedure</label>
			<textarea name="recipe[procedure]"><%=recipes.procedure%></textarea>
		</div>
		<input type="submit" class="ui basic button big violet" value='Update'> 
	</form>

</div>

<% include ./partials/footer %>



